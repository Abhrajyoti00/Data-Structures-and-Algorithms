{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile and run",
        "type": "shell",
        "command": "",
        "args": [
          "cp",
          "${file}",
          "${workspaceFolder}",
          "&&",
          "g++",
          "${fileBasename}",
          "-o",
          "test.out",
          "&&",
          "./test.out",
          "<",
          "input.txt",
          ">",
          "output.txt",
          "&&",
          "rm",
          "*out",
          "&&",
          "rm",
          "${fileBasename}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true,
        },
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": [
            "relative",
            "${workspaceRoot}"
          ],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      }
    ]
  }